cc_sources = \
    ${source}

h_sources = \
    ${headers}

##
## Compiler / Linker Info
##

lib_LTLIBRARIES= libdecaf.la
libdecaf_la_SOURCES= $(h_sources) $(cc_sources)
libdecaf_la_CXXFLAGS= $(DECAF_CXXFLAGS)
libdecaf_la_CFLAGS= $(DECAF_CFLAGS)
libdecaf_la_LDFLAGS= -version-info $(DECAF_LIBRARY_VERSION)
libdecaf_la_LIBADD= $(DECAF_LIBS)

##
## Packaging Info
##
library_includedir=$(includedir)/$(DECAF_LIBRARY_NAME)
nobase_library_include_HEADERS = $(h_sources)
